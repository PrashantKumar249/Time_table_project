<?php
session_start();
include '../include/db.php'; // Assuming config.php has $conn

$faculty_id = $_SESSION['faculty_id'];

// Handle leave request
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['request_leave'])) {
    $leave_date = mysqli_real_escape_string($conn, $_POST['leave_date']);
    $reason = mysqli_real_escape_string($conn, $_POST['reason']);
    
    if (empty($leave_date) || empty($reason)) {
        $leave_error = 'Date and reason are required';
    } else {
        $query = "INSERT INTO faculty_leave (faculty_id, leave_date, reason) VALUES ($faculty_id, '$leave_date', '$reason')";
        if (mysqli_query($conn, $query)) {
            $leave_success = 'Leave request submitted successfully';
        } else {
            $leave_error = 'Error submitting leave: ' . mysqli_error($conn);
        }
    }
}

// Fetch faculty data
$query = "SELECT f.faculty_name, f.email, b.branch_name
          FROM faculty f
          JOIN branches b ON f.branch_id = b.branch_id
          WHERE f.faculty_id = $faculty_id";
$result = mysqli_query($conn, $query);
$faculty_data = mysqli_fetch_assoc($result);

// Fetch assigned subjects
$subjects_query = "SELECT s.subject_code, s.subject_name, s.weekly_hours
                   FROM subjects s
                   JOIN faculty_subjects fs ON s.subject_id = fs.subject_id
                   WHERE fs.faculty_id = $faculty_id";
$subjects_result = mysqli_query($conn, $subjects_query);
$subjects = [];
while ($row = mysqli_fetch_assoc($subjects_result)) {
    $subjects[] = $row;
}

// Fetch leave status
$leave_query = "SELECT leave_id, leave_date, reason, status, substitute_faculty_id, created_at
                FROM faculty_leave
                WHERE faculty_id = $faculty_id
                ORDER BY created_at DESC";
$leave_result = mysqli_query($conn, $leave_query);
$leaves = [];
while ($row = mysqli_fetch_assoc($leave_result)) {
    $leaves[] = $row;
}
?>
<?php include 'header.php'; ?>
<div class="dashboard-container">
    <!-- Header Section -->
    <header class="dashboard-header">
        <div class="header-content">
            <h1 class="dashboard-welcome">Welcome back, <?php echo htmlspecialchars($faculty_data['faculty_name']); ?>!</h1>
            <p class="dashboard-info">
                <span class="info-item">Branch: <?php echo htmlspecialchars($faculty_data['branch_name']); ?></span>
                <span class="info-separator">|</span>
                <span class="info-item">Email: <?php echo htmlspecialchars($faculty_data['email']); ?></span>
            </p>
        </div>
    </header>

    <!-- Main Dashboard Grid -->
    <main class="dashboard-main">
        <!-- Assigned Subjects Card -->
        <section class="dashboard-card">
            <div class="card-header">
                <h2 class="card-title">Assigned Subjects</h2>
                <?php if (!empty($subjects)): ?>
                    <span class="card-badge"><?php echo count($subjects); ?> Subjects</span>
                <?php endif; ?>
            </div>
            <?php if (empty($subjects)): ?>
                <div class="empty-state">
                    <div class="empty-icon">ðŸ“š</div>
                    <p class="empty-text">No subjects assigned yet. Contact your HOD to assign subjects.</p>
                </div>
            <?php else: ?>
                <div class="table-wrapper">
                    <table class="dashboard-table">
                        <thead>
                            <tr>
                                <th>Subject Code</th>
                                <th>Subject Name</th>
                                <th>Weekly Hours</th>
                            </tr>
                        </thead>
                        <tbody>
                            <?php foreach ($subjects as $index => $subject): ?>
                                <tr class="<?php echo ($index % 2 == 0) ? 'table-row-alt' : ''; ?>">
                                    <td class="table-cell-code"><?php echo htmlspecialchars($subject['subject_code']); ?></td>
                                    <td><?php echo htmlspecialchars($subject['subject_name']); ?></td>
                                    <td class="table-cell-hours"><?php echo $subject['weekly_hours']; ?> hrs</td>
                                </tr>
                            <?php endforeach; ?>
                        </tbody>
                    </table>
                </div>
            <?php endif; ?>
        </section>

        <!-- Leave Request Card -->
        <section class="dashboard-card full-width">
            <div class="card-header">
                <h2 class="card-title">Request Leave / Mark Absent</h2>
            </div>
            <?php if (isset($leave_error)): ?>
                <div class="alert alert-error"><?php echo htmlspecialchars($leave_error); ?></div>
            <?php endif; ?>
            <?php if (isset($leave_success)): ?>
                <div class="alert alert-success"><?php echo htmlspecialchars($leave_success); ?></div>
            <?php endif; ?>
            <form method="post" class="leave-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="leave_date">Select Date</label>
                        <input type="date" id="leave_date" name="leave_date" required class="form-input">
                        <small class="form-help">Choose the date for leave or absence</small>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group full-width">
                        <label for="reason">Reason</label>
                        <textarea id="reason" name="reason" rows="4" placeholder="Provide a brief reason for your leave or absence (e.g., medical emergency, personal matter)..." required class="form-input"></textarea>
                        <small class="form-help">Be descriptive for better processing</small>
                    </div>
                </div>
                <button type="submit" name="request_leave" class="btn-primary full-width">Submit Request</button>
            </form>
        </section>

        <!-- Leave Status Card -->
        <section class="dashboard-card">
            <div class="card-header">
                <h2 class="card-title">Leave Requests Status</h2>
                <?php if (!empty($leaves)): ?>
                    <span class="card-badge"><?php echo count($leaves); ?> Requests</span>
                <?php endif; ?>
            </div>
            <?php if (empty($leaves)): ?>
                <div class="empty-state">
                    <div class="empty-icon">ðŸ“…</div>
                    <p class="empty-text">No leave requests submitted yet. Use the form above to request one.</p>
                </div>
            <?php else: ?>
                <div class="table-wrapper">
                    <table class="dashboard-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Reason</th>
                                <th>Status</th>
                                <th>Submitted</th>
                            </tr>
                        </thead>
                        <tbody>
                            <?php foreach ($leaves as $index => $leave): ?>
                                <tr class="<?php echo ($index % 2 == 0) ? 'table-row-alt' : ''; ?>">
                                    <td class="table-cell-date"><?php echo date('M d, Y', strtotime($leave['leave_date'])); ?></td>
                                    <td><?php echo htmlspecialchars(substr($leave['reason'], 0, 40)) . (strlen($leave['reason']) > 40 ? '...' : ''); ?></td>
                                    <td><span class="status-badge status-<?php echo $leave['status']; ?>"><?php echo ucfirst($leave['status']); ?></span></td>
                                    <td class="table-cell-time"><?php echo date('M j, H:i', strtotime($leave['created_at'])); ?></td>
                                </tr>
                            <?php endforeach; ?>
                        </tbody>
                    </table>
                </div>
            <?php endif; ?>
        </section>
    </main>

    
</div>

